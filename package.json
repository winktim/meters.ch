  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "lodash": "^4.17.21",
    "node-sass": "^5.0.0",
    "nuxt-purgecss": "^1.0.0",
    "prettier": "2.1.2",
    "push-dir": "^0.4.1",
    "sass-loader": "^10.1.0",
    "tailwindcss": "^1.0.0"
